<!-- TODO [YB] No error whyle spec parsing when data type entity missed -->
<!-- TODO [YB] external entities shall not be used as attr value - against XML WFC -->

<!-- Log event values -->
<!--  Event - object/state updated -->
<!ENTITY levent_update '1'>
<!--  Event - object/state created -->
<!ENTITY levent_creation '2'>
<!ENTITY levent_anytime '3'>

<!-- Values of logging data -->
<!ENTITY logdata_new '2' >
<!ENTITY logdata_dep '8' >

<!-- State data types -->
<!ENTITY dtype_int '1'>
<!ENTITY dtype_uint '2'>
<!ENTITY dtype_bool '5'>


<!-- Logging data. States the data of FAP element that should be logged -->
<!ELEMENT logdata EMPTY>

<!-- Logspec includes attribute "levent" and assosiated logging data set -->
<!ELEMENT logspec (logdata+)>

<!ELEMENT state (logspec*)>

<!ELEMENT object (logspec*, object* , state*, conn*)>

<!ELEMENT caeenv (object*)>

<!-- Transition function -->
<!ELEMENT transf (dep*)>

<!-- Connection of state -->
<!ELEMENT conn (dep*) >

<!-- Dependency in state connection -->
<!ELEMENT dep EMPTY >

<!ATTLIST logspec event (1 | 2 | 3) #REQUIRED>
<!ATTLIST logdata id (2 | 8) #REQUIRED>

<!ATTLIST object 
   type CDATA #REQUIRED
   id CDATA #REQUIRED
>

<!-- State's attributes:
  type - type of state
  datatype - data type (how state data can be interpreted
  id - identification of instance
  transf - transtion function -->
<!ATTLIST state 
   type CDATA #REQUIRED
   id CDATA #REQUIRED
   len CDATA #IMPLIED
   access (Reg | Inp | Out) #REQUIRED
   transf CDATA #IMPLIED
   init CDATA #REQUIRED>

<!-- Connections of state -->
<!ATTLIST conn 
   state CDATA #REQUIRED
>

<!-- Dependency in state connections -->
<!ATTLIST dep 
   id CDATA #REQUIRED
>

